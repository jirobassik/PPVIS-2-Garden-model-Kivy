<TooltipMDFloatingActionButton@MDFloatingActionButton+MDTooltip>

MDScreen:

    MDBottomNavigation:
        panel_color: .2, .2, .2, 1
        text_color_normal: 0, 0, 0, 1
        text_color_active: 24/255.0, 185/255.0, 38/255.0, 0.8
        elected_color_background: 0, 0, 1, .4

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Сад'
            icon: "leaf"

            MDFloatLayout:

                MDIcon:
                    icon: "calendar-week"
                    font_size: dp(120)
                    pos_hint: {"x": 0.68, 'y': 0.36}

                MDLabel:
                    id: label_week
                    text: "0"
                    halign: 'center'
                    valign: 'bottom'
                    size_hint: 0.11, 0.04
                    pos_hint: {"x": 0.745, 'y': 0.808}
                    background_color: (1, 1, 1, 1)

                Image:
                    id: loading_animation_gif
                    source: 'Gif/Silence.zip'
                    size_hint: 0.6, 0.2
                    pos_hint: {"x": 0.5, 'y': 0.54}
                    anim_delay: 0.03

                Image:
                    id: loading_animation_gif2
                    source: 'Gif/Sun.zip'
                    size_hint: 0.6, 0.2
                    pos_hint: {"x": 0.5, 'y': 0.35}
                    anim_delay: 0.15

                Image:
                    id: grass_image
                    source: 'Grass/Grass5.png'
                    size_hint: 0.18, 0.15
                    pos_hint: {"x": 0.713, 'y': 0.165}

                MDLabel:
                    id: label_add1
                    text: "Приветстуем Вас в симуляции сада. Чтобы начать, нажмите: Продолжить симуляцию сада"
                    halign: 'left'
                    valign: 'bottom'
                    color: 24/255.0, 185/255.0, 38/255.0, 0.8
                    size_hint: 0.6, 0.75
                    pos_hint: {"x": 0.08, 'y': 0.21}
                    background_color: (0, 0, 0, 0.8)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos

                MDFillRoundFlatIconButton:
                    text: 'Продолжить симуляцию сада'
                    icon: "sprout-outline"
                    pos_hint: {"x": 0.2, 'y': 0.035}
                    size_hint: 0.6, 0.1
                    on_press: app.change_image_grass(); app.main_press(); app.change_week()


                MDFloatingActionButtonSpeedDial:
                    data: app.data
                    data:
                        {'Посадка': 'seed-outline',
                        'Полив': 'watering-can-outline',
                        'Удобрение': 'spray',
                        'Прополка': 'rake'}
                    root_button_anim: True
                    callback: app.callback
                    bg_color_stack_button: 24/255.0, 185/255.0, 38/255.0, 0.8
                    bg_color_root_button: 24/255.0, 185/255.0, 38/255.0, 0.7
                    bg_hint_color: 239/255.0, 100/255.0, 12/255.0, 0.8

                TooltipMDFloatingActionButton:
                    icon: "close-box"
                    tooltip_text: "Очистка экрана"
                    pos_hint: {"x": 0.05, 'y': 0.035}
                    on_press: app.clear_screen()


        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Урожай'
            icon: 'barn'

            MDBoxLayout:
                orientation: "vertical"
                spacing: "10dp"

                MDToolbar:
                    elevation: 10
                    title: "Урожай"

                ScrollView:
                    MDList:
                        id: md_list
                        padding: 0

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'История'
            icon: 'history'

            ScrollView:
                MDLabel:
                    id: history
                    text: ""
                    size_hint_x: 1.0
                    size_hint_y: None
                    text_size: self.width, None
                    height: self.texture_size[1]


<IconListItem>:
    IconLeftWidget:
        icon: root.icon

<CreateItem>:
    size_hint_y: None
    height: content.height

    MDCardSwipeFrontBox:
        # Content of card.

        FitImage:
            id: plant
            source: root.source
            size_hint: 0.25, 0.88

        ThreeLineListItem:
            id: content
            text: root.text
            secondary_text: root.text_2
            tertiary_text: root.text_3
            _no_ripple_effect: True
